<div class="row mx-auto my-5 py-5"></div>
<div class="row mx-auto py-5">
   <div class="col px-1"></div>
    <div class="col px-5">
         <div class="contact">
            <div class="form-group">
                <input class="form-control" id="name-input" placeholder="name">
            </div>
            <div class="form-group">
                <input type="email" class="form-control" id="email-input" placeholder="email">
            </div>
            <div class="form-group">
                <input type="phone" class="form-control" id="phone-input" placeholder="phone number">
            </div>
            <div class="form-group">
                <input class="form-control" id="subject-input" placeholder="subject">
            </div>
            <div class="form-group">
                <textarea class="form-control" id="message-input" placeholder="message" rows="7"></textarea>
            </div>
                <div class="row mx-auto"><button class="btn" id="mail" type="submit">send</button></div>
        </div>
    </div>
    <div class="col px-1"></div>
</div>
<div class="row mx-auto py-5"></div>

<!-- Modal -->

<!-- Modal -->
<div class="modal fade" id="contactAlert" tabindex="-1" role="dialog" aria-labelledby="contactAlert" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="contactAlertTitle">Thank you</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Your message has been sent. Please allow us 48 hours to respond. 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Ok.</button>
      </div>
    </div>
  </div>
</div>